<%= javascript_tag do %>
	$(document).ready(function(){
		var date = new Date();
		var d = date.getDay();
		var m = date.getMonth();
		var y = date.getFullYear();
		$('#calendar').fullCalendar({
			header: {
					left:"prev,next,today",
					center:"title",
					right:"month,basicWeek,basicDay"
				},
				editable: true,
				events: [
				{
					title: "Un évènement planifié",
					start: new Date(y, m, d, 10),
					end: new Date(y,m,d,11)
				}	
				]
		});
	});
<% end %>

